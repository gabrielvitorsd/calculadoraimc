<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora de IMC</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        #resultado {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h2>Calculadora de IMC</h2>
    <label for="peso">Peso (kg):</label>
    <input type="number" id="peso">
    <br>
    <label for="altura">Altura (m):</label>
    <input type="number" id="altura">
    <br>
    <button onclick="calcularIMC()">Calcular IMC</button>
    <br>
    <div id="resultado"></div>

    <script>
        function calcularIMC() {
            var peso = parseFloat(document.getElementById('peso').value);
            var altura = parseFloat(document.getElementById('altura').value);
            
            if (isNaN(peso) || isNaN(altura) || altura <= 0 || peso <= 0) {
                document.getElementById('resultado').innerHTML = "Por favor, insira valores válidos para peso e altura.";
                return;
            }
            
            var imc = peso / (altura * altura);
            var mensagem = "Seu IMC é " + imc.toFixed(2) + ". ";
            
            if (imc < 18.5) {
                mensagem += "Você está abaixo do peso.";
            } else if (imc < 25) {
                mensagem += "Seu peso está normal.";
            } else if (imc < 30) {
                mensagem += "Você está acima do peso.";
            } else {
                mensagem += "Você está obeso.";
            }
            
            document.getElementById('resultado').innerHTML = mensagem;
        }
    </script>
</body>
</html>
